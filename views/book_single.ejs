<!DOCTYPE html>
<html lang="en">
  <head>
    <% include partials/head.ejs %>
  </head>
  <body>

    <% include partials/header.ejs %>

    <!-- Website hero. -->
    <div id="hero-image-single" style="background-image: url('/images/<%= book.hero_image %>');">
      <h1 id="hero-title"><%= title %></h1>
    </div>

    <div class="content-padding clearfix">

      <div class="cover-wrapper">
        <img src="/images/<%= book.cover %>" class="img-responsive">
      </div>

      <div class="description-wrapper">

        <div class="description">
          <h2 class="book-header">Description</h2>
          <p><%= book.description %></p>
        </div>

        <div class="main-characters">
          <h2 class="book-header">Main Characters</h2>
          <ul>
            <% for (var i = 0; i < main_characters.length; i++) { %>
              <li><%= main_characters[i] %></li>
              <% } %>
          </ul>
        </div>
      </div>
    </div>

    <% include partials/footer.ejs %>
    <% include partials/scripts.ejs %>
  </body>
</html>
